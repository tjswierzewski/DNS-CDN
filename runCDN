#!/bin/bash

while getopts 'p:o:n:u:i:' OPTION; do
    case "$OPTION" in
        p)
            port=${OPTARG}
            ;;
        o)
            origin=${OPTARG}
            ;;
        i)
            keyfile=${OPTARG}
            ;;
        n)
            servername=${OPTARG}
            ;;
        u)
            username=${OPTARG}
            ;;
    esac
done
shift $((OPTIND-1))

#start DNS server
ssh -i $keyfile $username@97.107.140.73 <<EOF
nohup ./DNS/dnsserver -p $port -n $servername > foo.out 2> foo.err < /dev/null &
EOF

ssh -i $keyfile $username@173.255.210.124 <<EOF
nohup ./HTTP/httpserver -p $port -o $origin > foo.out 2> foo.err < /dev/null &
EOF